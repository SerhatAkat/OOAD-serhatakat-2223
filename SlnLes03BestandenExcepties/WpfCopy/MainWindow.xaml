        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfCopy"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Label Content="File in:" HorizontalAlignment="Left" Margin="140,141,0,0" VerticalAlignment="Top" Width="59" FontSize="15"/>
        <TextBox x:Name="txtFile" HorizontalAlignment="Left" Height="23" Margin="265,148,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="209" FontSize="15"/>
        <Button x:Name="btnKies" Content="kies..." HorizontalAlignment="Left" Margin="522,151,0,0" VerticalAlignment="Top" Width="75" Click="btnKies_Click"/>
        <Button x:Name="btnGo" Content="Go!" HorizontalAlignment="Left" Margin="458,239,0,0" VerticalAlignment="Top" Width="139" Height="42" FontSize="15" IsEnabled="False" Click="btnGo_Click"/>
        <Label x:Name="lblMsg" Content="" HorizontalAlignment="Left" Margin="295,239,0,0" VerticalAlignment="Top" Height="42" Width="137"/>
    </Grid>
</Window>
