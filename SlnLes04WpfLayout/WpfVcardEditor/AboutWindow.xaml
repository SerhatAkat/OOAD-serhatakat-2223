<Window x:Class="WpfVcardEditor.AboutWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfVcardEditor"
        mc:Ignorable="d"
        Title="AboutWindow" MaxHeight="450" MaxWidth="450" MinHeight="450" MinWidth="450">
    <Grid VerticalAlignment="Center">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Image Source="img/odisee logo.png" Width="300" Height="150" Grid.Row="0" Grid.ColumnSpan="2"></Image>
        <TextBlock Grid.Row="1" Grid.Column="0" Text="Gemaakt door:" FontWeight="ExtraBold" Margin="100 10 10 10" HorizontalAlignment="Right" FontSize="15"/>
        <TextBlock Grid.Row="1" Grid.Column="1" Text="Rogier van der Linde" Margin="0 10 10 10" FontSize="15"/>
        <TextBlock Grid.Row="2" Grid.Column="0" Text="Vak:" FontWeight="ExtraBold" Margin="100 10 10 10" FontSize="15"/>
        <TextBlock Grid.Row="2" Grid.Column="0" Text="OO Application Development" Margin="135 0 0 0" Grid.ColumnSpan="2" VerticalAlignment="Center" FontSize="15"/>
        <TextBlock Grid.Row="3" Grid.Column="0" Text="Academiejaar:" FontWeight="ExtraBold" Margin="100 10 10 10" FontSize="15"/>
        <TextBlock Text="2022 - 2023" Margin="0 10 10 10" Grid.Row="3" Grid.Column="1" VerticalAlignment="Center" FontSize="15"/>
        <Button x:Name="btnSluiten" Content="SLUITEN" Margin="0,20,0,0" Click="btnSluiten_Click" Height="35" Width="80" HorizontalAlignment="Center" Grid.Row="4" Grid.ColumnSpan="2"/>
    </Grid>
</Window>
